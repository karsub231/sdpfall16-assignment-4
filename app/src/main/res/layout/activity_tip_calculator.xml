<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.gatech.seclass.tipcalculator.TipCalculatorActivity">

    <TextView
        android:layout_width="60pt"
        android:layout_height="15pt"
        android:layout_marginTop="10pt"
        android:text="Check amount:"
        android:textSize="7pt"
        android:paddingLeft="1pt"
        android:paddingTop="2.5pt"
        android:id="@+id/tvCheckAmountValue"/>

    <EditText
        android:layout_width="90pt"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65pt"
        android:layout_marginTop="10pt"
        android:id="@+id/checkAmountValue"/>

    <TextView
        android:layout_width="60pt"
        android:layout_height="15pt"
        android:text="Party size:"
        android:layout_marginTop="5pt"
        android:textSize="7pt"
        android:layout_below="@+id/tvCheckAmountValue"
        android:paddingLeft="1pt"
        android:paddingTop="2.5pt"
        android:id="@+id/tvPartySizeValue"/>

    <EditText
        android:layout_width="90pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:layout_below="@+id/tvCheckAmountValue"
        android:layout_marginLeft="65pt"
        android:id="@+id/partySizeValue"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50pt"
        android:layout_below="@id/tvPartySizeValue"
        android:layout_marginTop="5pt"
        android:text="Compute tip"
        android:id="@+id/buttonCompute"
        android:onClick="computeTip"
        android:inputType="number"/>

    <TextView
        android:layout_width="20pt"
        android:layout_height="15pt"
        android:layout_marginTop="10pt"
        android:text="Tip: "
        android:textSize="7pt"
        android:paddingLeft="1pt"
        android:layout_below="@+id/buttonCompute"
        android:paddingTop="2.5pt"
        android:id="@+id/tvTip"/>
    <TextView
        android:layout_width="18pt"
        android:layout_height="15pt"
        android:layout_marginTop="10pt"
        android:text="15%"
        android:textSize="7pt"
        android:paddingLeft="1pt"
        android:layout_below="@+id/buttonCompute"
        android:layout_toRightOf="@id/tvTip"
        android:paddingTop="2.5pt"
        android:id="@+id/tvfifteenPercentTipValue"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25pt"
        android:layout_marginTop="10pt"
        android:layout_below="@+id/buttonCompute"
        android:layout_toRightOf="@id/tvfifteenPercentTipValue"
        android:paddingTop="2.5pt"
        android:id="@+id/fifteenPercentTipValue"/>

    <TextView
        android:layout_width="18pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:text="20%"
        android:textSize="7pt"
        android:paddingLeft="1pt"
        android:layout_below="@+id/buttonCompute"
        android:layout_toRightOf="@id/fifteenPercentTipValue"
        android:paddingTop="2.5pt"
        android:id="@+id/tvtwentyPercentTipValue"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25pt"
        android:layout_marginTop="10pt"
        android:layout_below="@+id/buttonCompute"
        android:layout_toRightOf="@id/tvtwentyPercentTipValue"
        android:paddingTop="2.5pt"
        android:id="@+id/twentyPercentTipValue"/>

    <TextView
        android:layout_width="18pt"
        android:layout_height="15pt"
        android:layout_marginTop="10pt"
        android:text="25%"
        android:textSize="7pt"
        android:paddingLeft="1pt"
        android:layout_below="@+id/buttonCompute"
        android:layout_toRightOf="@id/twentyPercentTipValue"
        android:paddingTop="2.5pt"
        android:id="@+id/tvTwentyfivePercentTipValue"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25pt"
        android:layout_marginTop="10pt"
        android:layout_below="@+id/buttonCompute"
        android:layout_toRightOf="@id/tvTwentyfivePercentTipValue"
        android:paddingTop="2.5pt"
        android:id="@+id/twentyfivePercentTipValue"/>

    <TextView
        android:layout_width="20pt"
        android:layout_height="15pt"
        android:layout_marginTop="10pt"
        android:text="Total : "
        android:textSize="7pt"
        android:paddingLeft="1pt"
        android:layout_below="@+id/tvTip"
        android:paddingTop="2.5pt"
        android:id="@+id/tvTotal"/>
    <TextView
        android:layout_width="18pt"
        android:layout_height="15pt"
        android:layout_marginTop="10pt"
        android:text="15%"
        android:textSize="7pt"
        android:paddingLeft="1pt"
        android:layout_below="@+id/tvfifteenPercentTipValue"
        android:layout_toRightOf="@id/tvTip"
        android:paddingTop="2.5pt"
        android:id="@+id/tvfifteenPercentTotalValue"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25pt"
        android:layout_marginTop="10pt"
        android:layout_below="@+id/tvfifteenPercentTipValue"
        android:layout_toRightOf="@id/tvfifteenPercentTipValue"
        android:paddingTop="2.5pt"
        android:id="@+id/fifteenPercentTotalValue"/>

    <TextView
        android:layout_width="18pt"
        android:layout_height="15pt"
        android:layout_marginTop="10pt"
        android:text="20%"
        android:textSize="7pt"
        android:paddingLeft="1pt"
        android:layout_below="@+id/tvfifteenPercentTipValue"
        android:layout_toRightOf="@id/fifteenPercentTipValue"
        android:paddingTop="2.5pt"
        android:id="@+id/tvtwentyPercentTotalValue"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25pt"
        android:layout_marginTop="10pt"
        android:layout_below="@+id/tvfifteenPercentTipValue"
        android:layout_toRightOf="@id/tvtwentyPercentTipValue"
        android:paddingTop="2.5pt"
        android:id="@+id/twentyPercentTotalValue"/>

    <TextView
        android:layout_width="18pt"
        android:layout_height="15pt"
        android:layout_marginTop="10pt"
        android:text="25%"
        android:textSize="7pt"
        android:paddingLeft="1pt"
        android:layout_below="@+id/tvfifteenPercentTipValue"
        android:layout_toRightOf="@id/twentyPercentTipValue"
        android:paddingTop="2.5pt"
        android:id="@+id/tvtwentyfivePercentTotalValue"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25pt"
        android:layout_marginTop="10pt"
        android:layout_below="@+id/tvfifteenPercentTipValue"
        android:layout_toRightOf="@id/tvTwentyfivePercentTipValue"
        android:paddingTop="2.5pt"
        android:id="@+id/twentyfivePercentTotalValue"/>
</RelativeLayout>
